{
  "overrides": [
    {
      "files": ["*.ts", "*.js"],
      "options": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "htmlWhitespaceSensitivity": "css",
        "insertPragma": false,
        "singleAttributePerLine": false,
        "bracketSameLine": false,
        "jsxSingleQuote": true,
        "printWidth": 100,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "requirePragma": false,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false,
        "vueIndentScriptAndStyle": false,
        "parser": "typescript",
        "plugins": ["prettier-plugin-organize-imports"]
      }
    },
    {
      "files": ["*.sol"],
      "options": {
        "tabWidth": 4,
        "plugins": ["prettier-plugin-solidity"]
      }
    }
  ]
}
